@model DAL.Entity.Staff
@{
    ViewData["Title"] = "Yeni Personel Oluştur";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="card">
        <div class="card-header">
            <h2>Yeni Personel Oluştur</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form role="form" asp-action="Create" asp-controller="Category" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <label>Personel Adı</label>
                                    <input asp-for="FirstName" type="text" class="form-control" placeholder="Personel adı girin">
                                </div>
                                <div class="form-group">
                                    <label>Personel Adı</label>
                                    <input asp-for="FirstName" type="text" class="form-control" placeholder="Personel adı girin">
                                </div>
                                <div class="form-group">
                                    <label>Kategori Açıklama</label>
                                    <input asp-for="Description" type="text" class="form-control" placeholder="Kategori Açıklama Girin">
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Oluştur</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

